<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/IMGFornecedorDoInstaldor"
            app:srcCompat="@drawable/ic_user"
            android:layout_width="100dp"
            android:layout_height="136dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Nome_Fornecedor_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nome:" />

                <TextView
                    android:id="@+id/tVNomeFornecedorInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_Empresa_Fornecedor_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Empresa:" />

                <TextView
                    android:id="@+id/tvEmpresaFornecedorInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_Email_Fornecedor_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/tvEmailFornecedorInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_Categoria_Fornecedor_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Categoria:" />

                <TextView
                    android:id="@+id/tvCategoriaFornecedorInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                   />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>