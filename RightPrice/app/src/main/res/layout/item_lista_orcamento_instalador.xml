<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/IMGOrcamento"
            android:layout_width="100dp"
            android:layout_height="136dp"
            app:srcCompat="@mipmap/ic_orcamento" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNome_Orcamento_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nome Orcamento:" />

                <TextView
                    android:id="@+id/tVNomeOrcamentoInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tVData_Orcamento_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Data:" />

                <TextView
                    android:id="@+id/tVDataOrcamentoInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_Margem_orcamento_Instalador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Margem:" />

                <TextView
                    android:id="@+id/tVMargemOrcamentoInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_total_Orcamento_Instaldor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Total:" />

                <TextView
                    android:id="@+id/tvTotalOrcamentoInstalador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                     />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>